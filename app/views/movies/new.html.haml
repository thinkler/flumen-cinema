.container
  .row
    .col-md-4.col-md-offset-2.col-xs-12.col-sm-4.col-sm-offset-2
      .jumbotron

        %h1 New movie
        = bootstrap_form_for @movie do |f|
          = f.text_field :name
          = f.text_field :genre
          = f.text_field :box_office
          = f.text_area :desc
          = f.text_field :poster_url
          = f.submit "Create"