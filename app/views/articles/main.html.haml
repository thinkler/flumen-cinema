- @articles.each do |a|
  - if current_user
    - if current_user.admin?
      = link_to "DEL", a, method: :delete, class: "btn btn-danger"
      = link_to "EDIT", edit_article_path(a), class: "btn btn-info"
  .thumbnail
    = image_tag(a.img_url)
    .caption
      %h2
        = a.title
      %p
        = a.body
      %button.btn.btn-primary
        Comments
        .badge
          = a.comments.count
      %button.btn.btn-danger
        Rating
        .badge
          = a.rating
      -#    MAKE BTN GROUP
      - if current_user
        %button.btn.btn-info
          v
        %button.btn.btn-info
          ^
      .post-data
        = a.created_at.strftime("%d %b. %Y")
        = a.created_at.strftime("%H:%M")

.center
  %ul.pagination
    %li.active
      %a 1
    %li
      %a 2
    %li
      %a 3
    %li
      %a 4
    %li
      %a 5


